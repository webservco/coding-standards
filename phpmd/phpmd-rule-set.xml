<?xml version="1.0"?>
<ruleset name="PHPMD rule set"
    xmlns="http://pmd.sf.net/ruleset/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
        http://pmd.sf.net/ruleset_xml_schema.xsd"
        xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Custom rule set, includes all rules available in PHPMD.
    </description>

    <rule ref="rulesets/cleancode.xml" />
    <rule ref="rulesets/cleancode.xml/MissingImport" />
    <rule ref="rulesets/codesize.xml" />
    <rule ref="rulesets/controversial.xml" />
    <rule ref="rulesets/design.xml" />
    <rule ref="rulesets/naming.xml">
        <!-- Need to exclude rule in order to have cusotm configuration for it -->
        <exclude name="LongClassName" />
        <exclude name="LongVariable" />
    </rule>
    <!-- Custom rule configuration -->
    <rule ref="rulesets/naming.xml/LongVariable">
        <properties>
            <!-- default is 20, set 40 as the default to `rulesets/naming.xml/LongClassName`, then suffix list is not needed -->
            <property name="maximum" value="40" />
        </properties>
    </rule>
    <rule ref="rulesets/unusedcode.xml" />
</ruleset>
